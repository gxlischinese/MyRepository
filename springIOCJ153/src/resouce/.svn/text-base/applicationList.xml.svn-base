<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.2.xsd 
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.2.xsd ">
	<!-- 引入外部的prop -->
	<context:property-placeholder location="resouce/user.properties"/>
	<bean id="cat" class="com.lovo.ioc.bean.Cat">
	<property name="catName" value="小花猫"></property>
	<property name="catAge" value="5"></property>
	</bean>
	<bean id="cat2" class="com.lovo.ioc.bean.Cat">
	    <constructor-arg value="加菲猫"></constructor-arg>
	     <constructor-arg value="3"></constructor-arg>
	</bean>
	<bean id="lc" class="com.lovo.ioc.bean.LC">	
	<property name="sex" value="${sex}"></property>
	<property name="pro">
	    <props>
	        <prop key="userName">${user_name}</prop>
	         <prop key="age">${age}</prop>
	    </props>
	</property>
	   <!-- 设置集合属性 -->
	   <property name="listCat">
	      <list>
	         <ref bean="cat"/>
	         <ref bean="cat2"/>
	      </list>
	   </property>
	</bean>
	
	
</beans>	

		
		
	