<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.2.xsd 
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.2.xsd ">
	<bean id="cat" class="com.lovo.ioc.proxy.impl.Cat"></bean>
    <!-- 切面的bean -->
    <bean id="messageAspectXML" class="com.lovo.ioc.proxy.MessageAspectXML"></bean>
    <!-- 配置AOP -->
    <aop:config>
       <!-- 配置切点 -->
       <aop:pointcut expression="execution(* com.lovo.ioc.proxy.*.*(..))" id="mypointcut"/>
       <!-- 切面 -->
       <aop:aspect ref="messageAspectXML">
          <!-- 通知 -->  <!-- 切点和通知关联起来 -->
          <aop:after method="printMessage" pointcut-ref="mypointcut"/>
        
       </aop:aspect>
    </aop:config>
</beans>	

		
		
	